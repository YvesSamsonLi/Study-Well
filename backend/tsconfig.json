{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "types": ["node"],

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["src", "prisma", "../shared/contracts/auth.ts"],
  "exclude": ["node_modules", "dist"]
}
